%h3 .c-Table.c-Table--borderless
%table.c-Table.c-Table--borderless
  = table

%h3 .c-Table.c-Table--striped
%table.c-Table.c-Table--striped
  = table

%h3 .c-Table.c-Table--hover
%table.c-Table.c-Table--hover
  = table
