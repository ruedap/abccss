{
  "name": "@ruedap/abccss",
  "version": "0.1.0",
  "description": "Easy CSS architecture to arrange in alphabetical order",
  "author": "ruedap",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruedap/abccss.git"
  },
  "bugs": {
    "url": "https://github.com/ruedap/abccss/issues"
  },
  "homepage": "https://github.com/ruedap/abccss",
  "keywords": [
    "css",
    "scss",
    "css-architecture",
    "bem",
    "suit-css"
  ],
  "main": "src/index.js",
  "bin": {
    "abccss": "src/index.js"
  },
  "files": [
    "src",
    "*.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">= 8",
    "npm": ">= 5"
  },
  "scripts": {
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "lint:scss": "stylelint 'src/templates/stylesheets/**/*.scss'",
    "lint:scss:fix": "run-s lint:scss -- --fix",
    "format": "run-s format:*",
    "format:js": "prettier --write '**/*.js'",
    "format:scss": "prettier --write 'src/templates/stylesheets/**/*.scss'",
    "sprite:svg": "svgstore -o src/templates/images/sprite.svg -p svg- src/templates/images/sprite_svg/**/*.svg",
    "version": "npm run changelog && git add CHANGELOG.md"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "commander": "^2.15.1",
    "figlet": "^1.2.0",
    "fs-extra": "^5.0.0",
    "rc": "^1.2.6"
  },
  "devDependencies": {
    "@ruedap/stylelint-config-abccss": "^0.1.0",
    "conventional-changelog-cli": "^1.3.21",
    "css-loader": "^0.28.11",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.12.0",
    "stylelint": "^9.2.0",
    "svgstore-cli": "^1.3.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.15"
  },
  "stylelint": {
    "extends": "@ruedap/stylelint-config-abccss"
  }
}
